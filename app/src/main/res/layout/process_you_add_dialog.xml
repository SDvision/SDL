<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/process_add_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Add a new process"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/process_add_action_ok"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/process_add_action_cancel"
            android:layout_marginEnd="19dp"
            android:text="OK"
            android:textColor="#33bbff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/process_add_action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/process_finish_date_linear"
            android:layout_marginStart="18dp"
            android:text="CANCEL"
            android:textColor="#33bbff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/process_add_dialog_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/process_add_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter process Title"/>

        <EditText
            android:id="@+id/process_add_dialog_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/process_add_dialog_title_edit"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Enter your process discreption here"/>



        <LinearLayout
            android:id="@+id/process_finish_date_linear"
            android:layout_below="@+id/process_add_dialog_description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:text="Start Date :"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
        android:id="@+id/process_add_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:text="Date will be here"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>